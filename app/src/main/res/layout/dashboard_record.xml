<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="@dimen/elementsSpace"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/elementsSpace"
            android:layout_marginStart="@dimen/elementsSpace" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/elementsSpace" android:layout_marginEnd="@dimen/elementsSpace"
            android:background="@drawable/dashboard_record_border" android:padding="10dp">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/dashboard_item_taskName"
                android:gravity="center" android:textSize="24sp" android:textStyle="bold|italic"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/dashboard_item_taskDate"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="@dimen/elementsSpace" android:layout_marginStart="@dimen/elementsSpace"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/dashboard_item_taskTime"
            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/dashboard_item_taskTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/dashboard_item_taskDate"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    android:layout_marginRight="@dimen/elementsSpace" android:layout_marginEnd="@dimen/elementsSpace"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>