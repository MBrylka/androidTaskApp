<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.add.AddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="@string/add_taskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/label_taskName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/elementsSpace" android:layout_marginStart="@dimen/elementsSpace"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="@dimen/elementsSpace"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/input_editTaskName"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/elementsSpace"
                android:layout_marginStart="@dimen/elementsSpace" android:layout_marginEnd="@dimen/elementsSpace"
                android:layout_marginRight="@dimen/elementsSpace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_taskName"
                android:inputType="text"/>
        <TextView
                android:text="@string/add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/label_editTime"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/elementsSpace" android:layout_marginStart="@dimen/elementsSpace"
                app:layout_constraintTop_toBottomOf="@+id/input_editTaskName"
                android:layout_marginTop="@dimen/elementsSpace"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/input_taskTime"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/elementsSpace"
                android:layout_marginStart="@dimen/elementsSpace"
                app:layout_constraintTop_toBottomOf="@+id/label_editTime"
                android:layout_marginEnd="@dimen/elementsSpace" android:layout_marginRight="@dimen/elementsSpace"
                app:layout_constraintEnd_toEndOf="parent" android:editable="false" android:focusable="false"/>
        <TextView
                android:text="@string/add_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/label_addDate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/elementsSpace" android:layout_marginStart="@dimen/elementsSpace"
                app:layout_constraintTop_toBottomOf="@+id/input_taskTime"
                android:layout_marginTop="@dimen/elementsSpace"/>
        <CalendarView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/calendar_editTaskDate"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/elementsSpace"
                android:layout_marginStart="@dimen/elementsSpace" android:layout_marginEnd="@dimen/elementsSpace"
                android:layout_marginRight="@dimen/elementsSpace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/label_addDate"/>
        <TextView
                android:text="@string/add_notification_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/label_addNotifications"
                app:layout_constraintTop_toBottomOf="@+id/calendar_editTaskDate"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="@dimen/elementsSpace"
                android:layout_marginLeft="@dimen/elementsSpace" android:layout_marginStart="@dimen/elementsSpace"/>
        <Switch
                android:text="@string/add_checkboxLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/switch_editNotify"
                app:layout_constraintTop_toBottomOf="@+id/label_addNotifications"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/elementsSpace" android:layout_marginStart="@dimen/elementsSpace"/>
        <TextView
                android:text="@string/add_radioGroup_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/label_edit_radioGroup"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/elementsSpace"
                android:layout_marginStart="@dimen/elementsSpace" app:layout_constraintTop_toBottomOf="@+id/switch_editNotify"
                android:layout_marginTop="@dimen/elementsSpace"/>
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/label_edit_radioGroup"
                android:id="@+id/radioGroup_editNotificationType"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/elementsSpace"
                android:layout_marginStart="@dimen/elementsSpace">
        </RadioGroup>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup_editNotificationType"
                android:layout_marginTop="@dimen/elementsSpace" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/elementsSpace" android:layout_marginStart="@dimen/elementsSpace">

            <Button
                    android:text="@string/edit_saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_saveEdit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
                    app:layout_constraintHorizontal_bias="0.358"
                    app:layout_constraintEnd_toStartOf="@+id/btn_cancelEdit"/>
            <Button
                    android:text="@string/edit_cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_cancelEdit" android:layout_weight="1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
                    android:layout_marginRight="156dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>